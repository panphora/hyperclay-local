{
  "name": "hyperclay-local-electron",
  "version": "1.0.0",
  "description": "Hyperclay Local Server - Desktop App",
  "main": "main.js",
  "homepage": "https://hyperclay.com",
  "author": "Hyperclay",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "npm run dev-css & electron . --dev",
    "build": "npm run build-css && electron-builder",
    "build-css": "npx @tailwindcss/cli -i ./src.css -o ./renderer.css",
    "dev-css": "npx @tailwindcss/cli -i ./src.css -o ./renderer.css --watch",
    "build-all": "npm run build-css && node build-script.js --all",
    "build-mac": "npm run build-css && electron-builder --mac",
    "build-windows": "npm run build-css && electron-builder --win",
    "build-linux": "npm run build-css && electron-builder --linux",
    "dist": "npm run build-all",
    "quick-build": "npm run build-css && electron-builder --dir"
  },
  "build": {
    "appId": "com.hyperclay.local-server",
    "productName": "Hyperclay Local",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "server.js",
      "preload.js",
      "new-app-ui.html",
      "renderer.css",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.8",
    "express": "^4.18.2",
    "tailwindcss": "^4.1.8"
  }
}
