{
  "name": "hyperclay-local-electron",
  "productName": "HyperclayLocal",
  "version": "1.5.0",
  "description": "Hyperclay Local Server - Desktop App",
  "main": "src/main/main.js",
  "homepage": "https://hyperclay.com",
  "author": "Hyperclay",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "start": "npm run build-react && cross-env NODE_ENV=production electron .",
    "dev": "concurrently \"npm run dev-css\" \"npm run dev-react\" \"npm run electron-dev\"",
    "electron-dev": "wait-on dist/bundle.js && cross-env NODE_ENV=development electron . --dev",
    "build": "npm run build-css && npm run build-react && electron-builder",
    "build-css": "npx @tailwindcss/cli -i ./src/renderer/styles/src.css -o ./src/renderer/styles/renderer.css",
    "dev-css": "npx @tailwindcss/cli -i ./src/renderer/styles/src.css -o ./src/renderer/styles/renderer.css --watch",
    "build-react": "webpack --config config/webpack.config.js --mode=development",
    "dev-react": "webpack --config config/webpack.config.js --mode=development --watch",
    "build-react-prod": "webpack --config config/webpack.config.js --mode=production",
    "build-icons": "node build-scripts/generate-icons.js",
    "clean": "node build-scripts/clean-dist.js",
    "clean-mac": "node build-scripts/clean-dist.js mac",
    "clean-windows": "node build-scripts/clean-dist.js windows",
    "clean-linux": "node build-scripts/clean-dist.js linux",
    "build-all": "npm test && npm run build-icons && npm run clean && npm run build-css && npm run build-react-prod && electron-builder --mac --linux && node build-scripts/move-executables.js linux",
    "linux-build:run": "npm test && npm run build-icons && npm run clean-linux && npm run build-css && npm run build-react-prod && electron-builder --linux && node build-scripts/move-executables.js linux",
    "mac-build:run": "npm test && npm run build-icons && npm run clean-mac && npm run build-css && npm run build-react-prod && electron-builder --mac",
    "mac-build:local": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false CSC_NAME= npm run mac-build:run -- --config.mac.identity=null --config.afterSign=build-scripts/no-op.js",
    "mac-build:finalize": "node build-scripts/check-notarization.js",
    "win-build:run": "gh workflow run build-and-sign-windows.yml",
    "win-build:status": "gh run list --workflow=build-and-sign-windows.yml --limit 5",
    "win-build:download": "npm run clean-windows && gh run download --name hyperclay-local-windows-signed --dir executables",
    "upload-to-r2": "node build-scripts/post-build.js",
    "release": "node scripts/release.js",
    "update-external-docs": "node scripts/update-external-docs.js"
  },
  "build": {
    "appId": "com.hyperclay.local-server",
    "productName": "HyperclayLocal",
    "npmRebuild": false,
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/main/**/*",
      "src/sync-engine/**/*",
      "src/renderer/app.html",
      "src/renderer/styles/renderer.css",
      "dist/bundle.js",
      "assets/**/*"
    ],
    "extraFiles": [],
    "asarUnpack": [
      "node_modules/tailwind-hyperclay/**",
      "node_modules/tailwindcss/**",
      "node_modules/@tailwindcss/**",
      "node_modules/lightningcss*/**",
      "node_modules/postcss-selector-parser/**",
      "node_modules/cssesc/**",
      "node_modules/util-deprecate/**",
      "node_modules/mini-svg-data-uri/**"
    ],
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "identity": "Hyperspace Systems LLC (JC7YGGXYKH)",
      "type": "distribution",
      "entitlements": "entitlements.plist",
      "entitlementsInherit": "entitlements.plist",
      "electronLanguages": [
        "en",
        "en_US"
      ],
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "background": "build/dmg-background.png",
      "window": {
        "width": 540,
        "height": 380,
        "x": 400,
        "y": 100
      },
      "contents": [
        {
          "x": 130,
          "y": 100
        },
        {
          "x": 410,
          "y": 100,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "iconSize": 128
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "HyperclayLocal-Setup-${version}.${ext}"
    },
    "afterSign": "build-scripts/notarize-submit.js"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-react": "^7.27.1",
    "@electron/notarize": "^3.1.1",
    "@tailwindcss/cli": "^4.1.14",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "electron": "^38.3.0",
    "electron-builder": "^26.7.0",
    "electron-reload": "^2.0.0-alpha.1",
    "jest": "^30.2.0",
    "rimraf": "^6.1.0",
    "tslib": "^2.8.1",
    "wait-on": "^9.0.1",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.913.0",
    "cheerio": "^1.0.0",
    "chokidar": "^3.6.0",
    "eta": "^3.5.0",
    "eventsource": "^3.0.6",
    "express": "^4.18.2",
    "lightningcss": "^1.30.1",
    "livesync-hyperclay": "^0.7.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-hyperclay": "^0.1.14",
    "tailwindcss": "^4.1.14",
    "upath": "^2.0.1"
  }
}
