{
  "name": "hyperclay-local-electron",
  "productName": "HyperclayLocal",
  "version": "1.1.0",
  "description": "Hyperclay Local Server - Desktop App",
  "main": "src/main/main.js",
  "homepage": "https://hyperclay.com",
  "author": "Hyperclay",
  "license": "MIT",
  "scripts": {
    "start": "npm run build-react && cross-env NODE_ENV=production electron .",
    "dev": "concurrently \"npm run dev-css\" \"npm run dev-react\" \"npm run electron-dev\"",
    "electron-dev": "wait-on dist/bundle.js && cross-env NODE_ENV=development electron . --dev",
    "build": "npm run build-css && npm run build-react && electron-builder",
    "build-css": "npx @tailwindcss/cli -i ./src/renderer/styles/src.css -o ./src/renderer/styles/renderer.css",
    "dev-css": "npx @tailwindcss/cli -i ./src/renderer/styles/src.css -o ./src/renderer/styles/renderer.css --watch",
    "build-react": "webpack --config config/webpack.config.js --mode=development",
    "dev-react": "webpack --config config/webpack.config.js --mode=development --watch",
    "build-react-prod": "webpack --config config/webpack.config.js --mode=production",
    "clean": "node build-scripts/clean-dist.js",
    "clean-mac": "node build-scripts/clean-dist.js mac",
    "clean-windows": "node build-scripts/clean-dist.js windows",
    "clean-linux": "node build-scripts/clean-dist.js linux",
    "build-all": "npm run clean && npm run build-css && npm run build-react-prod && electron-builder --mac --win --linux",
    "build-mac": "npm run clean-mac && npm run build-css && npm run build-react-prod && electron-builder --mac",
    "build-windows": "node build-scripts/build-windows-with-env.js",
    "build-linux": "npm run clean-linux && npm run build-css && npm run build-react-prod && electron-builder --linux",
    "dist": "npm run build-all",
    "check-notarization": "node build-scripts/check-notarization.js",
    "upload-to-r2": "node build-scripts/post-build.js"
  },
  "build": {
    "appId": "com.hyperclay.local-server",
    "productName": "HyperclayLocal",
    "npmRebuild": false,
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/main/**/*",
      "src/sync-engine/**/*",
      "src/renderer/app.html",
      "src/renderer/styles/renderer.css",
      "dist/bundle.js",
      "assets/**/*"
    ],
    "extraFiles": [],
    "asarUnpack": [],
    "mac": {
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "identity": "Hyperspace Systems LLC (JC7YGGXYKH)",
      "type": "distribution",
      "entitlements": "entitlements.plist",
      "entitlementsInherit": "entitlements.plist",
      "electronLanguages": [
        "en",
        "en_US"
      ],
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "azureSignOptions": {
        "endpoint": "https://eus.codesigning.azure.net",
        "codeSigningAccountName": "Hyperclay",
        "certificateProfileName": "HyperclayLocalPublicCertProfile"
      }
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "afterSign": "build-scripts/notarize-submit.js"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-react": "^7.27.1",
    "@electron/notarize": "^3.1.1",
    "@tailwindcss/cli": "^4.1.14",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "electron": "^38.3.0",
    "electron-builder": "^25.1.8",
    "electron-reload": "^2.0.0-alpha.1",
    "tailwindcss": "^4.1.14",
    "tslib": "^2.8.1",
    "wait-on": "^9.0.1",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.913.0",
    "chokidar": "^3.6.0",
    "express": "^4.18.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "upath": "^2.0.1"
  }
}
