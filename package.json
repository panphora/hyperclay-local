{
  "name": "hyperclay-local-electron",
  "productName": "Hyperclay Local",
  "version": "1.0.0",
  "description": "Hyperclay Local Server - Desktop App",
  "main": "main.js",
  "homepage": "https://hyperclay.com",
  "author": "Hyperclay",
  "license": "MIT",
  "scripts": {
    "start": "npm run build-react && electron .",
    "dev": "concurrently \"npm run dev-css\" \"npm run dev-react\" \"npm run electron-dev\"",
    "electron-dev": "wait-on dist/bundle.js && electron . --dev",
    "build": "npm run build-css && npm run build-react && electron-builder",
    "build-css": "npx @tailwindcss/cli -i ./src.css -o ./renderer.css",
    "dev-css": "npx @tailwindcss/cli -i ./src.css -o ./renderer.css --watch",
    "build-react": "webpack --mode=development",
    "dev-react": "webpack --mode=development --watch",
    "build-react-prod": "webpack --mode=production",
    "build-all": "npm run build-css && npm run build-react-prod && node build-script.js --all",
    "build-mac": "npm run build-css && npm run build-react-prod && electron-builder --mac",
    "build-windows": "npm run build-css && npm run build-react-prod && electron-builder --win",
    "build-linux": "npm run build-css && npm run build-react-prod && electron-builder --linux",
    "dist": "npm run build-all",
    "quick-build": "npm run build-css && npm run build-react-prod && electron-builder --dir"
  },
  "build": {
    "appId": "com.hyperclay.local-server",
    "productName": "Hyperclay Local",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "server.js",
      "preload.js",
      "app.html",
      "dist/**/*",
      "renderer.css",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
        "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
        "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
        "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-react": "^7.27.1",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.1.2",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-reload": "^2.0.0-alpha.1",
    "wait-on": "^8.0.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.8",
    "express": "^4.18.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.8"
  }
}
